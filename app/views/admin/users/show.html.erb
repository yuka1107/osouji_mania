<p>プロフィール画像</p>
<h2 class="m-5"><%= @user.name %>さんの会員詳細情報</h2>
<div class="container">
  <table class="table">
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <td>ユーザーネーム</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>プロフィール文</td>
        <td><%= @user.introduction %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td><%= @user.is_active ? "有効" : "退会" %></td>
      </tr>
    </tbody>
  </table>
  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success mx-3" %>
    <%= link_to "投稿一覧", class: "btn btn-primary mx-3" %>
  </div>
</div>