<h2 class="m-5">投稿内容編集</h2>
<div class="container">
  <%= form_with model: @post_article, url: post_article_path, local:true do |f| %>
  <div class="row my-3 align-items-center">
    <div class="col-md-3">
      <%= f.label "画像"　%>
    </div>
    <div class="col-md-6">
      <%= f.attachment_field :image %>
    </div>
  </div>
  <div class="row my-3 align-items-center">
    <div class="col-md-3">
      <%= f.label "タイトル", class: "form-label" %>
    </div>
    <div class="col-md-6">
      <%= f.test_field :title, class: "form-label" %>
    </div>
  </div>
  <div class="row my-3 align-items-center">
    <div class="col-md-3">
      <%= f.label "説明", class: "form-label" %>
    </div>
    <div class="col-md-6">
      <%= f.test_field :caption, class: "form-label" %>
    </div>
  </div>
  <div class="row my-3 align-items-center">
    <div class="col-md-3">
      <%= f.label "公開ステータス", class: "form-label" %>
    </div>
    <div class="col-md-6">
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "公開中" %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "非公開中" %>
    </div>
  </div>
  <div class="row my-3 justify-content-center">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
  <% end %>
</div>