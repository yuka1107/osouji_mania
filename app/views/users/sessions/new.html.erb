<div class="container">
  <h2 class="m-4">ログイン</h2>
  <%= form_with model: @user,url: user_sesion_path, local: true do |f| %>
    <div class="row my-3 justify-content-center">
      <div class="field">
        <div class="col-3">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row my-3 justify-content-center">
      <div class="col-3">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-6">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>

    <div class="row my-3">
      <%= f.submit "ログイン", class: "btn btn-primary mx-auto" %>
    </div>
  <% end %>
  
  <h4 class="m-5">会員登録がお済みでない方</h4>
  <p class="row justify-content-center">
    <%= link_to "こちら", new_user_registration_path %>から新規登録を行ってください。
  </p>
  
</div>